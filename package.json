{
  "name": "first-extension-sudhanshu",
  "displayName": "First Extension â€“ Smart Error Detection",
  "description": "Custom error detection for JS/TS/Java files with bilingual support",
  "version": "0.0.1",
  "publisher": "SudhanshuRaj",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:java",
    "onCommand:first-extension.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "first-extension.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Custom Errors",
      "properties": {
        "hoverErrors.language": {
          "type": "string",
          "enum": ["en", "hi"],
          "default": "en",
          "description": "Error message language: 'en' for English, 'hi' for Hindi"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Codesmashersgit/VsCode-Extension"
  },
  "bugs": {
    "url": "https://github.com/Codesmashersgit/VsCode-Extension/issues"
  },
  "homepage": "https://github.com/Codesmashersgit"
}
